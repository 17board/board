
#user  nobody;
worker_processes  1;

#error_log  logs/error.log;
#error_log  logs/error.log  notice;
error_log  logs/error.log  debug;

pid        logs/nginx.pid;


events {
    worker_connections  1024;
}


http {
    include       mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for" "$request_time" "$upstream_http_write" "$request_body"';

    access_log  logs/access.log  main;
    
    client_header_timeout 10;
    client_header_buffer_size 4k;
    large_client_header_buffers 4 32k;
    
    sendfile        on;
    #tcp_nopush     on;

    #keepalive_timeout  0;
    keepalive_timeout  0;

    gzip  off;
    chunked_transfer_encoding off;
    server {
        listen       8080;
        server_name  localhost;

        location ~* (css|img|js|flv|swf|download)/(.+)$ {
                root /Users/wangwei/Documents/Project/webroot/phalcon;
				rewrite '/([^\/]+)(.*)$' /$1/public$2 break;  
        }

        location /{
            root           /Users/wangwei/Documents/Project/webroot/phalcon;
            fastcgi_pass   127.0.0.1:9000;
            fastcgi_index  index.php;
            include        fastcgi.conf;
            rewrite '^/*$' /board/public/index.php?url=/board break;
            rewrite '/([^\/]+)(.*)$' /$1/public/index.php?_url=$2 break;
        }
        
        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   html;
        }
    }
}
